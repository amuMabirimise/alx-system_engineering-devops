#!/usr/bin/env bash

# Purpose: Modify Nginx configuration to change the default port from 8080 to 80.
# This script uses sed to replace occurrences of 8080 with 80 in the Nginx site configuration.
sed -i 's/8080/80/g' /etc/nginx/sites-enabled/default

# Restart the Nginx service to apply the configuration changes.
sudo service nginx restart

# Forcefully terminate the Nginx process using its PID to ensure a clean restart.
kill -9 "$(cat /var/run/nginx.pid)"

